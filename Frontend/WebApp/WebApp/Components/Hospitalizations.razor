@if (Bookings == null)
{
    <p><em>Venligst vælg en patient!</em></p>
}
else if (Bookings.Count == 0)
{
    <p><em>Ingen indlæggelser at vise!</em></p>
}
else
{
    <table class="table text-center table-hover">
        <thead>
            <tr>
                <AuthorizeView Roles="Doctor, Nurse">
                    <Authorized>
                        <th>#</th>
                    </Authorized>
                </AuthorizeView>
                <th>Start</th>
                <th>Slut</th>
                <th>Hospital</th>
                <th>Adresse</th>
                <th>Beskrivelse</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Bookings)
            {
                @if (booking.Type == BookingType.Hospitilization)
                {
                    @if (booking.Approved)
                    {
                        <tr>
                            <AuthorizeView Roles="Doctor, Nurse">
                                <Authorized>
                                    <td><button class="btn btn-primary" @onclick="@(() => OnEditClick.InvokeAsync(booking))">Edit</button></td>
                                </Authorized>
                            </AuthorizeView>
                            <td>@booking.BookedTime</td>
                            <td>@booking.BookedEnd</td>
                            <td>@booking.Hospital.Name</td>
                            <td>@booking.Hospital.Address</td>
                            <td>@booking.Description</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public EventCallback<BookingModel> OnEditClick { get; set; }

    [Parameter]
    public List<BookingModel> Bookings { get; set; }
}
