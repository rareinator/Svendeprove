@page "/fetchdata"

@inject IPatientData test

@using DataAccessLibrary
@using DataAccessLibrary.Models

<h1>Journals</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (journals == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var journal in journals)
            {
                <tr>
                    <td>@journal.JournalId</td>
                    <td>@journal.CreationTime</td>
                    <td>@journal.Intro</td>
                    <td>@journal.PatientId</td>
                    <td>@journal.CreatedBy</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<JournalModel> journals;

    protected override async Task OnInitializedAsync()
    {
        journals = test.GetPatientJournals(1);
    }
}
